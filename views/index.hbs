<div class="container">
  <!-- search bar -->
  <div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{ keyword }}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="dropdown text-right">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" 
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      餐廳排列
    </a>
    <div class="dropdown-menu" aria-labelledby="sortingButton">
      <a class="dropdown-item" href="/">紀錄順序 舊>新 (預設)</a>
      <a class="dropdown-item" href="/new-old" value="new-old">紀錄順序 新>舊</a>
      <a class="dropdown-item" href="/rating">餐廳評分 高>低</a>
      <a class="dropdown-item" href="/category">餐廳類別</a>
    </div>
  </div>

  <!-- restaurant list -->
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="card-columns">
          {{#each restaurants}}
          <a href="/restaurants/{{ this._id }}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{ this.name }}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="d-flex justify-content-end">
                  <a type="button" class="btn btn-outline-danger btn-sm mx-1" href="/restaurants/{{ this._id }}/edit"><i
                      class="fas fa-edit"></i></a>
                  <a type="button" class="btn btn-outline-danger btn-sm mx-1" href="/restaurants/{{ this._id }}"><i
                      class="fas fa-info-circle"></i></a>
                  <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-sm mx-1" type="submit"><i class="fas fa-trash-alt"></i></button>
                  </form>
                </div>
              </div>
            </div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

</div>